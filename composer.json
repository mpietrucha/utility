{
    "name": "mpietrucha/utility",
    "description": "The utility package.",
    "license": "MIT",
    "type": "library",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Micha≈Ç Pietrucha",
            "email": "michal.pietrucha@off-site.pl"
        }
    ],
    "require": {
        "php": "^8.5",
        "illuminate/filesystem": "^12.18",
        "illuminate/support": "^12.12",
        "larastan/larastan": "^3.4",
        "laravel/serializable-closure": "^2.0",
        "nunomaduro/collision": "^8.8",
        "nyholm/psr7": "^1.8",
        "psr/http-message": "^2.0",
        "spatie/ignition": "^1.15",
        "symfony/filesystem": "^7.3",
        "symfony/finder": "^7.3",
        "symfony/process": "^7.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "dev-main",
        "laravel/pint": "^1.22",
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^7.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Mpietrucha\\Extensions\\": "extensions/src/",
            "Mpietrucha\\Utility\\": "src/"
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@prettier:config"
        ],
        "post-update-cmd": [
            "@composer normalize"
        ],
        "lint": "pint --verbose --parallel",
        "prettier:config": "curl -sSLO https://raw.githubusercontent.com/mpietrucha/prettier/refs/heads/main/dist/.prettierrc",
        "test": [
            "@test:lint",
            "@test:types"
        ],
        "test:lint": "@lint --test",
        "test:types": "phpstan analyse --ansi"
    }
}
