{
    "name": "mpietrucha/utility",
    "description": "The utility package.",
    "license": "MIT",
    "type": "library",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Micha≈Ç Pietrucha",
            "email": "michal.pietrucha@off-site.pl"
        }
    ],
    "require": {
        "php": "^8.4",
        "cweagans/composer-patches": "^1.7",
        "illuminate/filesystem": "^12.18",
        "illuminate/support": "^12.12",
        "nyholm/psr7": "^1.8",
        "psr/http-message": "^2.0",
        "symfony/filesystem": "^7.3",
        "symfony/finder": "^7.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "larastan/larastan": "^3.4",
        "laravel/pint": "^1.22",
        "nunomaduro/collision": "^8.8",
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^7.2",
        "symplify/vendor-patches": "^11.4"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Mpietrucha\\PHPStan\\": "phpstan/src",
            "Mpietrucha\\Utility\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "patches": {
            "symfony/finder": [
                "patches/symfony-finder-finder-php.patch"
            ],
            "nyholm/psr7": [
                "patches/nyholm-psr7-src-stream-php.patch"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@prettier:config"
        ],
        "post-update-cmd": [
            "@composer normalize"
        ],
        "lint": "pint -v",
        "patches:generate": "vendor-patches generate",
        "prettier:config": "curl -sSL https://raw.githubusercontent.com/mpietrucha/prettier-config-synchronizer/refs/heads/main/synchronize | bash",
        "test": [
            "@test:lint",
            "@test:types"
        ],
        "test:lint": "pint --test -v",
        "test:types": "phpstan analyse --ansi"
    }
}